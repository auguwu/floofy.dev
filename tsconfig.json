{
    "extends": "@augu/tsconfig/dom.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowJs": true,
        "noEmit": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["src/env.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.astro"]
}
