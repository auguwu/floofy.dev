---
import { Image } from 'astro:assets';
import Footer from '~/components/Footer.astro';
import furry from '../../public/avatars/furry.png';
import Page from '~/components/Page.astro';

import '~/styles/global.css';
---

<Page title="404 - Not Found" description="🐻‍❄️🌺 404 | Not Found" path="/">
    <main class="h-screen justify-center items-center flex flex-col space-y-2 container mx-auto">
        <Image class="size-48 rounded-sm shrink-0" src={furry} alt="Noel avatar" draggable="false" />

        <h1 class="text-5xl font-sans">Nothing but us!~</h1>
        <h2 class="text-3xl">Seems like you found a page that doesn't exist!</h2>
    </main>

    <Footer />
</Page>

<style>
    body {
        background-blend-mode: overlay;
        background-attachment: fixed;
        background-position: center;
        background-image: url('/background.jpeg');
        background-color: #262336;
        background-size: cover;
        color: #fff;
    }
</style>
