---
import ProjectCard from '../components/ProjectCard.astro';
import Container from '../components/Container.astro';
import { Icon } from 'astro-icon';
import Navbar from '../components/Navbar.astro';
import Head from '../components/Head.astro';

import '../styles/global.css';

const githubRepos = await fetch('https://api.github.com/users/auguwu/repos')
  .then((res) => res.json())
  .then((data: any[]) =>
    data
      .sort((a, b) => b.stargazers_count - a.stargazers_count)
      .filter((s) => !s.archived)
      .filter((s) => s.name !== 'auguwu')
      .slice(0, 6)
  );
---

<html lang="en">
  <Head
    description="a pile of floof that exists on the internet, and knows how to operate a computer!~ (´・ω・｀)"
    title="pile of floof that exists"
    path="/"
  />

  <body class="flex flex-col space-y-12">
    <Navbar />
    <Container>
      <div class="relative max-lg:grid max-lg:place-self-center max-lg:text-center max-lg:place-items-center">
        <img
          src="https://cdn.floofy.dev/images/August.png"
          class="w-[154px] h-[154px] rounded-md shadow-sm"
          alt="noel avatar"
          draggable="false"
        />

        <h1 class="font-mono text-white text-4xl mt-3">Noel</h1>
        <h2 class="text-2xl text-white italic mt-4">a pile of floof that exists on the internet!</h2>
      </div>

      <div class="grid grid-cols-4 gap-3 mt-5 md:place-self-center md:gap-2 lg:hidden">
        <a href="https://discord.com/users/280158289667555328" class="mr-3">
          <Icon name="fa-brands:discord" size={64} class="text-white bg-[#5865F2] py-1 px-1 rounded-lg" />
        </a>

        <a href="https://github.com/auguwu" class="mr-2">
          <Icon name="fa-brands:github" size={64} class="text-white bg-[#333333] py-1 px-1 rounded-lg" />
        </a>

        <a href="https://twitter.com/auguuwu" class="mr-2">
          <Icon name="fa-brands:twitter" size={64} class="text-white bg-[#1DA1F2] py-1 px-1 rounded-lg" />
        </a>

        <a href="https://wuff.space/@noel" class="mr-2">
          <Icon name="fa-brands:mastodon" size={64} class="text-white bg-[#563ACC] py-1 px-1 rounded-lg" />
        </a>
      </div>

      <div class="flex container mx-auto mt-6 items-center justify-center lg:hidden">
        <div class="grid grid-cols-1 gap-6 [&>*]:h-full">
          {githubRepos.map((data) => <ProjectCard data={data} />)}
        </div>
      </div>

      <div class="container mx-auto max-w-7xl space-y-6 max-lg:hidden">
        <div class="grid grid-cols-3 gap-3 items-center [&>*]:h-full">
          {githubRepos.map((data) => <ProjectCard data={data} />)}
        </div>
      </div>
    </Container>
  </body>
</html>
