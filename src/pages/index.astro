---
import ProjectCard, { type Props } from '~/components/ProjectCard.astro';
import Container from '~/components/Container.astro';
import Navbar from '~/components/Navbar.astro';
import Head from '~/components/Head.astro';

const projects: Props['data'][] = [
    {
        description: '🐻‍❄️📦 Free, open source, and reliable Helm Chart registry made in Kotlin',
        language: 'kotlin',
        name: 'charted-server',
        url: 'https://charts.noelware.org'
    },
    {
        description: '🐻‍❄️🪶 Minimal, and fast HTTP proxy to host files from any cloud storage provider',
        language: 'kotlin',
        name: 'Hazel',
        url: 'https://github.com/Noelware/hazel'
    },
    {
        description: '🐻‍❄️💐 Easy, and flexible image host to share with your friends on Discord, Telegram, and more.',
        language: 'go',
        name: 'ume',
        url: 'https://github.com/auguwu/ume'
    },
    {
        description: "This site's source code -- made with Astro",
        language: 'astro',
        name: 'floofy.dev',
        url: 'https://floofy.dev'
    },
    {
        description: '💐💚 Optimized, and easy Docker images and Coder templates to use in your everyday work.',
        language: 'dockerfile',
        name: "Noel's Coder Images",
        url: 'https://github.com/auguwu/coder-images'
    },
    {
        description:
            '(coming soon) 🐻‍❄️📓 Toolchain to help generate documentation from any source and transform it to anything you want',
        language: 'rust',
        name: 'Noeldoc',
        url: 'https://github.com/Noelware/noeldoc'
    }
];
---

<html lang="en">
    <Head path="/" />
    <body>
        <Navbar />
        <div class="flex flex-col container mx-auto max-md:justify-center max-md:items-center lg:max-w-7xl">
            <div class="flex container flex-col mt-8 space-y-3">
                <h1 class="font-serif text-5xl">Noel</h1>
                <h2 class="text-3xl">Fullstack Developer, Systems Administration</h2>
                <hr />
                <h3 class="text-xl">
                    19 year old polar bear who boops his hardware too much to the point of possibly breaking it! (So far
                    it hasn't)
                </h3>
            </div>

            <h2 class="text-3xl mt-5">Projects</h2>
            <Container>
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-3 items-center [&>*]:h-full">
                    {projects.map((data) => <ProjectCard data={data} />)}
                </div>
            </Container>
        </div>
        <style is:global>
            @import '~/styles/global.css';
        </style>
    </body>
</html>
