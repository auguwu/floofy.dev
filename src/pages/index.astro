---
import ProjectCard, { type Props } from '~/components/ProjectCard.astro';
import Container from '~/components/Container.astro';
import Navbar from '~/components/Navbar.astro';
import Head from '~/components/Head.astro';

const birthday = new Date(2004, 2, 24).getTime();
const now = new Date(Date.now() - birthday);
const age = Math.abs(now.getUTCFullYear() - 1970);

const projects: Props['data'][] = [
    {
        description: '🐻‍❄️📦 Free, open source, and reliable Helm Chart registry made in Rust',
        language: 'rust',
        name: 'charted-server',
        url: 'https://charts.noelware.org'
    },
    {
        description: '🐻‍❄️🪶 Minimal, and fast HTTP proxy to host files from any cloud storage provider',
        language: 'rust',
        name: 'Hazel',
        url: 'https://github.com/Noelware/hazel'
    },
    {
        description: '🐻‍❄️💐 Easy, and flexible image host to share with your friends on Discord, Telegram, and more.',
        language: 'go',
        name: 'ume',
        url: 'https://github.com/auguwu/ume'
    }
];
---

<html lang="en">
    <Head path="/" />
    <body class="max-lg:px-3 py-2">
        <Navbar />
        <div class="flex flex-col container mx-auto max-md:justify-center max-md:items-center lg:max-w-7xl">
            <div class="flex container flex-col mt-8 space-y-3">
                <h1 class="font-serif text-5xl">Noel (he/him)</h1>
                <h2 class="text-3xl">Fullstack Developer, Systems Administrator</h2>
                <hr />
                <h3 class="text-xl">
                    {age} year old polar bear who boops his hardware too much to the point of possibly breaking it! (So far
                    it hasn't)
                </h3>
            </div>

            <h2 class="text-3xl lg:mt-5 mt-2">Projects</h2>
            <Container>
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-3 items-center [&>*]:h-full">
                    {projects.map((data) => <ProjectCard data={data} />)}
                </div>
            </Container>
        </div>
        <style is:global>
            @import '~/styles/global.css';
        </style>
    </body>
</html>
