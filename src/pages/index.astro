---
import '~/styles/global.css';

import { credits } from '~/site';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import { age } from '~/util/age';
import Footer from '~/components/Footer.astro';
import furry from '../../public/avatars/furry.png';
import Page from '~/components/Page.astro';

const currentAge = age(new Date(2004, 2, 24));

const socials = [
    {
        icon: 'fa-brands:discord',
        colour: 'bg-discord',
        uri: 'https://discord.com/users/280158289667555328'
    },
    {
        icon: 'fa-brands:github',
        colour: 'bg-github',
        uri: 'https://github.com/auguwu'
    },
    {
        icon: 'fa-brands:twitter',
        colour: 'bg-twitter',
        uri: 'https://twitter.com/dogwithputer'
    },
    {
        icon: 'fa-brands:steam',
        colour: 'bg-steam',
        uri: 'https://steamcommunity.com/id/auguwu'
    },
    {
        icon: 'fa-brands:telegram',
        colour: 'bg-telegram',
        uri: 'https://t.me/auguwu'
    }
] as const;

// if any mutuals I know want to be added, you can DM me on Discord (@auguwu)
// or submit a PR if you wish :3
const friends = [
    {
        friend: 'Spotlight',
        img: 'https://joscomputing.space/assets/friends/spotlight.gif',
        url: 'https://joscomputing.space'
    },
    {
        friend: 'Alula',
        img: 'https://alula.me/webring/alula.png',
        url: 'https://alula.me'
    },
    {
        friend: 'Ovyerus',
        img: 'https://ovyerus.com/webring/ovyerus.png',
        url: 'https://ovyerus.com'
    }
] as const;
---

<Page title="" description="üêª‚Äç‚ùÑÔ∏èü¶ã Full-time polar bear on the internet üêª‚Äç‚ùÑÔ∏èü¶ã" path="/">
    <main class="flex items-center justify-center h-screen">
        <div
            class="flex lg:flex-row flex-col flex-1/2 gap-4.5 bg-gray-800/85 py-2 px-1.5 max-w-5xl rounded-lg shadow shadow-pink-400"
        >
            <div class="flex flex-col align-middle">
                <Image src={furry} alt="Noel | Avatar" class="rounded-lg size-fit" draggable="false" />
                <a class="text-md hover:underline text-center" href={credits['avatar:furry']} target="_blank">
                    avatar credit
                </a>
            </div>

            <div class="flex flex-col gap-1.5">
                <h1 class="text-2xl">Noel Towa üêª‚Äç‚ùÑÔ∏èüå∫ [he/him]</h1>
                <h2 class="text-lg -mt-1.5">
                    {currentAge} year old that is a software engineer at day, polar bear at night
                </h2>

                <h2 class="text-lg mt-1.5">
                    Welcome to my corner of the internet! I am a software engineer, system administrator, and full-time
                    polar bear on the internet.
                </h2>

                <h2 class="text-lg mt-0.5">
                    I make software in <a href="https://rust-lang.org" target="_blank" class="hover:underline"
                        ><Icon name="vscode-icons:file-type-rust" class="inline" /> Rust</a
                    >, but I am also fluent in <a
                        href="https://typescriptlang.org"
                        target="_blank"
                        class="hover:underline"
                        ><Icon name="vscode-icons:file-type-typescript-official" class="inline" /> TypeScript</a
                    >,
                    <a href="https://kotlin-lang.org" target="_blank" class="hover:underline"
                        ><Icon name="vscode-icons:file-type-kotlin" class="inline" /> Kotlin</a
                    >, and
                    <a href="https://go.dev" target="_blank" class="hover:underline"
                        ><Icon name="vscode-icons:file-type-go" class="inline" /> Go</a
                    >.
                </h2>

                <div class="mt-3 flex flex-row align-middle gap-2">
                    {
                        socials.map((social) => (
                            <a class="mr-3" href={social.uri} id="icon" target="_blank">
                                <Icon
                                    class={`text-white ${social.colour} py-1 px-1 rounded-lg`}
                                    name={social.icon}
                                    size={48}
                                />
                            </a>
                        ))
                    }
                </div>

                <div class="mt-2.5 flex flex-row gap-2">
                    {
                        friends.map((friend) => (
                            <a href={friend.url}>
                                <Image
                                    src={friend.img as any}
                                    alt={`88x31 | ${friend.friend}`}
                                    width="128"
                                    height="128"
                                />
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>
    </main>

    <Footer />
</Page>

<style>
    body {
        background-blend-mode: overlay;
        background-attachment: fixed;
        background-position: center;
        background-image: url('/background.jpeg');
        background-color: #262336;
        background-size: cover;
        color: #fff;
    }
</style>
