---
export interface Props {
  description: string;
  image?: string;
  title: string;
  path: string;
}

const { description, image, title, path } = Astro.props;
---

<head>
  <title>Noel - {title}</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="shortcut icon" href="https://cdn.floofy.dev/images/August.png" />
  <meta property="og:description" content={description} />
  <meta name="description" content={description} />
  <meta name="theme-color" content="#896ae0" />
  <meta property="og:title" content={`Noel ðŸŒº${title.length > 0 ? ` ~ ${title}` : ''}`} />
  <meta property="og:image" content={image ?? 'https://cdn.floofy.dev/images/August.png'} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={`https://floofy.dev${path}`} />
  <meta name="language" content="English" />
  <meta name="keywords" content="august, auguwu, noel, noelware" />

  <!-- Only run Plausible in production -->
  {
    import.meta.env.PROD && (
      <script defer data-domain="floofy.dev" data-api="/plausible/api/event" src="/plausible/js/script.js" />
    )
  }
</head>
