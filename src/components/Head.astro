---
export interface Props {
    description?: string;
    image?: string;
    title?: string;
    path: string;
}

const { description, image, title, path } = Astro.props;
---

<head>
    <title>{`Noel ðŸŒº${title ? ` - ${title}` : ''}`.trim()}</title>
    <meta charset="UTF-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <link href="https://cdn.floofy.dev/images/August.png" rel="shortcut icon" />
    <meta content={description} property="og:description" />
    <meta content={description} name="description" />
    <meta content="#896ae0" name="theme-color" />
    <meta content={`Noel ðŸŒº${title?.length && title.length > 0 ? ` - ${title}` : ''}`.trim()} property="og:title" />
    <meta content={image ?? 'https://cdn.floofy.dev/images/August.png'} property="og:image" />
    <meta content="website" property="og:type" />
    <meta content={`https://floofy.dev${path}`} property="og:url" />
    <meta content="English" name="language" />
    <meta content="august, auguwu, noel, noelware" name="keywords" />

    <!-- Only run Plausible in production -->
    {
        import.meta.env.PROD && (
            <script
                data-api="https://plausible.noelware.org/api/event"
                data-domain="floofy.dev"
                defer
                src="https://plausible.noelware.org/js/script.js"
            />
        )
    }
</head>
